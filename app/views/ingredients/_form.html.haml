= form_with(model: ingredient, data: { turbo: true }) do |form|
  .space-y-4
    - if ingredient.errors.any?
      .bg-red-50.text-red-800.p-4.rounded-md.mb-4
        %h3.text-sm.font-medium.mb-2= "#{pluralize(ingredient.errors.count, 'error')} prohibited this ingredient from being saved:"
        %ul.list-disc.list-inside.text-sm
          - ingredient.errors.full_messages.each do |message|
            %li= message

    .flex.flex-col
      = form.label :name, class: "block text-sm font-medium text-gray-700 mb-1"
      = form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"

    .flex.gap-3.justify-end
      = link_to "Cancel", ingredients_path, class: "px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none", data: { turbo_frame: "_top" }
      = form.submit class: "px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none"
