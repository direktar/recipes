= turbo_frame_tag dom_id(user_ingredient) do
  .flex.items-center.bg-gray-50.p-3.rounded.justify-between
    .flex.items-center.gap-2
      %span.w-2.h-2.rounded-full.bg-indigo-500
      %span.font-medium= user_ingredient.ingredient.name

    .flex.items-center.gap-2
      - if user_ingredient.quantity.present?
        %span.text-gray-600.whitespace-nowrap
          = user_ingredient.quantity
          = user_ingredient.unit

      = button_to user_ingredient_path(user_ingredient), method: :delete, class: "text-red-600 hover:text-red-800" do
        %svg.h-5.w-5{xmlns: "http://www.w3.org/2000/svg", fill: "none", viewbox: "0 0 24 24", stroke: "currentColor"}
          %path{stroke: "currentColor", 'stroke-linecap': "round", 'stroke-linejoin': "round", 'stroke-width': "2", d: "M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"}
