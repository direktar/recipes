<!-- app/views/devise/passwords/new.html.erb -->
<main class="mx-auto flex min-h-screen w-full items-center justify-center bg-gray-900 text-white">
  <section class="flex w-[30rem] flex-col space-y-10">

    <h2 class="text-center text-4xl font-medium">Forgot&nbsp;your&nbsp;password?</h2>

    <%= form_for(resource,
                 as: resource_name,
                 url: password_path(resource_name),
                 html: { method: :post, class: "flex flex-col space-y-8" }) do |f| %>

      <!-- Email -->
      <div class="w-full transform border-b-2 bg-transparent text-lg duration-300 focus-within:border-indigo-500">
        <%= f.email_field :email,
                          autofocus: true,
                          autocomplete: "email",
                          placeholder: "Email",
                          class: "w-full border-none bg-transparent outline-none placeholder:italic focus:outline-none" %>
      </div>

      <!-- Error messages -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Submit -->
      <%= f.submit "Send reset instructions",
                   class: "transform rounded-sm bg-indigo-600 py-2 font-bold duration-300 hover:bg-indigo-400" %>

    <% end %>

    <!-- Back to log in / sign up -->
    <%= render "devise/shared/links" %>

  </section>
</main>
