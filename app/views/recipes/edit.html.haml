- content_for :title, "Edit Recipe"
.flex.flex-col.w-full
  .flex.justify-between.items-center.mb-6
    %h1.text-2xl.font-bold.text-gray-800
      Editing:
      %span.text-indigo-600= @recipe.title
    = link_to "Back to recipe", recipe_path(@recipe), class: "px-3 py-2 border border-gray-300 rounded text-gray-600 hover:bg-gray-50"

  = render "form", recipe: @recipe
